# ============================================
# AlignAI Server Environment Configuration
# ============================================
# 
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit your .env file to version control!
# ============================================

# --------------------------------------------
# Server Configuration
# --------------------------------------------
# Environment mode: 'development' | 'production' | 'test'
NODE_ENV=development

# Port number the server will listen on
# Note: Port 5000 is often used by macOS AirPlay, use 5001 or higher
PORT=5001

# --------------------------------------------
# Database Configuration
# --------------------------------------------
# MongoDB connection URI
# For local development: mongodb://localhost:27017/alignai
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
MONGODB_URI=mongodb://localhost:27017/alignai

# --------------------------------------------
# CORS Configuration
# --------------------------------------------
# Frontend application URL (used for CORS and Socket.io)
# Update this to match your frontend URL
FRONTEND_URL=http://localhost:3000

# --------------------------------------------
# Rate Limiting Configuration
# --------------------------------------------
# Time window for rate limiting in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# Maximum number of requests allowed per IP within the time window
RATE_LIMIT_MAX_REQUESTS=20

# --------------------------------------------
# File Upload Configuration
# --------------------------------------------
# Maximum file size for uploads in bytes (default: 10485760 = 10MB)
MAX_FILE_SIZE=10485760

# --------------------------------------------
# AI Service Configuration
# --------------------------------------------
# Choose AI provider: 'gemini', 'openai', 'groq', or 'vertex'
# - gemini: Google Gemini API (requires GEMINI_API_KEY)
# - openai: OpenAI ChatGPT API (requires OPENAI_API_KEY)
# - groq: Groq API with Llama models - FREE! (requires GROQ_API_KEY)
# - vertex: Google Vertex AI (requires Google Cloud authentication)
AI_PROVIDER=groq

# Legacy setting (if USE_VERTEX_AI=true, it overrides AI_PROVIDER)
USE_VERTEX_AI=false

# --------------------------------------------
# Google Gemini Configuration
# --------------------------------------------
# Gemini API Key (required when AI_PROVIDER=gemini)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini model to use (optional, defaults to gemini-1.5-flash)
GEMINI_MODEL=gemini-1.5-flash

# --------------------------------------------
# OpenAI Configuration (ChatGPT)
# --------------------------------------------
# OpenAI API Key (required when AI_PROVIDER=openai)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI model to use (optional, defaults to gpt-4o-mini)
# Available models: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# --------------------------------------------
# Groq Configuration (FREE - Recommended!)
# --------------------------------------------
# Groq API Key (required when AI_PROVIDER=groq)
# Get your FREE API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Groq model to use (optional, defaults to llama-3.3-70b-versatile)
# Available models: llama-3.3-70b-versatile, llama-3.1-8b-instant, mixtral-8x7b-32768
GROQ_MODEL=llama-3.3-70b-versatile

# --------------------------------------------
# Google Vertex AI Configuration
# --------------------------------------------
# Vertex AI project ID (required when AI_PROVIDER=vertex)
VERTEX_PROJECT=your_gcp_project_id

# Vertex AI location (optional, defaults to global)
VERTEX_LOCATION=global

# Vertex AI model (optional, defaults to gemini-2.5-flash)
VERTEX_MODEL=gemini-2.5-flash
